<?xml version="1.0" encoding="utf-8"?>
<resources>
    <add-resource type="style" name="IconText"/>
    <style name="IconText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minWidth">140dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
    <style name="TZ3Button">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">@dimen/button_width</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_txt</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/tz3button</item>
    </style>

</resources>
